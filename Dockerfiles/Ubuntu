FROM ubuntu:latest
LABEL maintainer="xrsec"
LABEL mail="troy@zygd.site"
LABEL Github="https://github.com/XRSec/AWVS14-Update"
LABEL org.opencontainers.image.source="https://github.com/XRSec/AWVS14-Update"
LABEL org.opencontainers.image.title="AWVS14-Update"

RUN apt update -y \
    && apt upgrade -y \
    && apt-get install sudo fonts-droid-fallback ttf-wqy-zenhei ttf-wqy-microhei fonts-arphic-ukai fonts-arphic-uming ncurses-bin unzip -y \
    && apt clean -y
